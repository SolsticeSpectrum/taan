            }

            playlist-touch := TouchArea {
                clicked => {
                    root.playlist-clicked();
                }
            }

            states [
                pressed when playlist-touch.pressed: {
                    background: rgba(255, 255, 255, 0.1);
                }
                hovered when playlist-touch.has-hover: {
                    background: rgba(255, 255, 255, 0.1);
                }
            ]
        }
    }
}
