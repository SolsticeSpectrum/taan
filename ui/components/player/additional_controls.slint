export component AdditionalControls inherits Rectangle {
    callback stop-clicked();
    callback shuffle-clicked();
    callback repeat-clicked();
    callback playlist-clicked();
    height: 40px;
    HorizontalLayout {
        alignment: space-around;
        stop-button := Rectangle {
            width: 40px;
            height: 40px;
            border-radius: 8px;
            Image {
                source: @image-url("../../../resources/icons/square.svg");
                width: 16px;
                height: 16px;
                colorize: #9ca3af;
            }

            stop-touch := TouchArea {
                clicked => {
                    root.stop-clicked();
                }
            }

            states [
                pressed when stop-touch.pressed: {
                    background: rgba(255, 255, 255, 0.1);
                }
                hovered when stop-touch.has-hover: {
                    background: rgba(255, 255, 255, 0.1);
                }
            ]
        }

        shuffle-button := Rectangle {
            width: 40px;
            height: 40px;
            border-radius: 8px;
            Image {
                source: @image-url("../../../resources/icons/shuffle.svg");
                width: 16px;
                height: 16px;
                colorize: #9ca3af;
            }

            shuffle-touch := TouchArea {
                clicked => {
                    root.shuffle-clicked();
                }
            }

            states [
                pressed when shuffle-touch.pressed: {
                    background: rgba(255, 255, 255, 0.1);
                }
                hovered when shuffle-touch.has-hover: {
                    background: rgba(255, 255, 255, 0.1);
                }
            ]
        }

        repeat-button := Rectangle {
            width: 40px;
            height: 40px;
            border-radius: 8px;
            Image {
                source: @image-url("../../../resources/icons/repeat.svg");
                width: 16px;
                height: 16px;
                colorize: #9ca3af;
            }

            repeat-touch := TouchArea {
                clicked => {
                    root.repeat-clicked();
                }
            }

            states [
                pressed when repeat-touch.pressed: {
                    background: rgba(255, 255, 255, 0.1);
                }
                hovered when repeat-touch.has-hover: {
                    background: rgba(255, 255, 255, 0.1);
                }
            ]
        }

        playlist-button := Rectangle {
            width: 40px;
            height: 40px;
            border-radius: 8px;
            Image {
